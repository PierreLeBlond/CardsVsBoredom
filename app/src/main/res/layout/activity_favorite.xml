<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ulaval.ima.cardsvsboredom.FavoriteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_favorite_victory"
        android:layout_above="@+id/textView_favorite_sentence"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_favorite_sentence"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:onClick="tweet"
        android:id="@+id/button_favorite_tweet"
        android:layout_below="@+id/textView_favorite_sentence"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save card"
        android:onClick="save"
        android:id="@+id/button_favorite_save"
        android:layout_below="@+id/button_favorite_tweet"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:onClick="goBack"
        android:id="@+id/button_favorite_return"
        android:layout_below="@+id/button_favorite_save"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
