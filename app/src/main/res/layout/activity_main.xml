<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainActivityLayout"
    android:background="#000000">

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/myPage_button"
        android:id="@+id/myPage_button"
        android:onClick="goToMyPage"
        android:background="#000000"
        android:textSize="20dp"
        android:capitalize="none"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/gameListView"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/titleJoin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffeeeeee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error_join"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/error_create"
        android:layout_alignStart="@+id/error_create" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_button"
        android:id="@+id/join_button"
        android:onClick="join"
        android:background="#FFFFFF"
        android:textSize="20dp"
        android:capitalize="none"
        android:textAllCaps="false"
        android:layout_below="@+id/gameListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_edit_text"
        android:hint="@string/hint_create"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#EEEEEE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error_create"
        android:layout_below="@+id/create_edit_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_button"
        android:id="@+id/create_button"
        android:onClick="create"
        android:background="#FFFFFF"
        android:textSize="20dp"
        android:capitalize="none"
        android:textAllCaps="false"
        android:layout_below="@+id/create_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Join a game"
        android:id="@+id/titleJoin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Create a game"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:layout_below="@+id/join_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="24dp" />
</RelativeLayout>
